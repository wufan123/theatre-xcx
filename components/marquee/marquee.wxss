@keyframes around {
    from {
      margin-left: 100%;
    }
    to {
       margin-left: var(--marqueeWidth--); 
    }
  }

.marquee_container{
  position: relative;
  width: 660rpx;
  overflow: hidden;
}
.marquee_container:hover{
  animation-play-state: paused;
}
.marquee_text{
  display: inline-block;
  white-space: nowrap;
  animation-name: around;
  animation-iteration-count: infinite;
  animation-timing-function:linear;
  font-size: 28rpx;
}