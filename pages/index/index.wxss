page {
    background-color: #e4e4e4;
    font-family:微软雅黑;
}

.title-bg {
    widows: 100%;
    height: 100rpx;
    background: white;
    display: flex;
    justify-content: space-between;
    align-items:Center;
}

.title-logo {
    width: 174rpx;
    height: 96rpx;
}

.title-account {
    width: 80rpx;
    height: 80rpx;
}

.title-other {
    width: 80rpx;
    height: 80rpx;
}

.branner-bg {
    width: 100%;
    height: 350rpx;
}

.branner-img {
    width: 100%;
    height: 350rpx;
}

.menu-bg {
    widows: 100%;
    background: white;
    display: flex;
    justify-content: space-around;
    align-items:Center;
}

.menu-item {
    padding-top: 10rpx;
    padding-bottom: 10rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.menu-item-ico {
    width: 110rpx;
    height: 110rpx;
}

.menu-item-txt {
}

.ticket-bg {
    background: white;
    margin-top: 20rpx;
    padding-bottom: 20rpx;
}

.ticket-line {
    padding-top: 20rpx;
}

.ticket-scroll {
    display: flex;
    margin-top: 20rpx;
    height: 320rpx;
}

.ticket-item {
    box-sizing:border-box;
    border: 1px solid #eee;
    margin-left: 20rpx;
    padding: 20rpx;
    min-width:500rpx;
    min-height: 200rpx;
    white-space: nowrap;
    height: 300rpx;
    border-radius: 8rpx;
}

.ticket-title-txt {
    margin-left: 20rpx;
}
.ticket-title-txt text{
  margin: 0 4rpx;
}
.go-buy{margin-top: 50rpx;}