.ticket-img {width: 696rpx;height: 240rpx;margin: 10rpx auto;background-size: contain;}
.ticket-img.ccp{background-image: url('http://p0bd8izdn.bkt.clouddn.com/ruihua/xcx/images/home_ccp.jpg');}
