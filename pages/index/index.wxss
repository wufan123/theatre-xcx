.title-icon{width: 50rpx;height: 50rpx;margin-left: 40rpx;}

.branner-bg {width: 100%;height: 500rpx;margin-top: 100rpx;}
.branner-img {width: 100%;height: 500rpx;}

.menu-bg {background-image: url('http://p0bd8izdn.bkt.clouddn.com/ruihua/xcx/images/menu_bg__.png'); background-repeat: no-repeat; background-size: 100% 100% ;display: flex;justify-content: space-around;align-items:Center;padding-top: 50rpx;}
