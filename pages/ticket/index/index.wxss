
.branner-bg {
    width: 100%;
    height: 350rpx;
    position: absolute;
    z-index: -1;
    top: 0;
}

.branner-img {
    width: 100%;
    height: 350rpx;
}

.content-bg {
    margin: 100rpx 30rpx 40rpx 30rpx;
    z-index: 1;
    padding: 40rpx;
    background: #ffffff;
}

.content-title text{
  display: block;
  margin-bottom: 10rpx;
}

.content-interval {
  text-align: center;
  margin: 40rpx 0;
  position: relative;
  height: 50rpx;
}

.content-interval-line {
  border-top: 1px solid #ccc;
  left: 0;
  width: 100%;
  color: red;
  top: 25rpx;
  z-index: 0;
  position: absolute
}

.content-interval-txt {
    position: absolute;
    padding: 4rpx 30rpx;
    color: #ffffff;
    background: #a4a4a4;
    margin-left: -80rpx;
    z-index: 1
}

.content-line {
    width: 225rpx;
    height: 2rpx;
    border-top:2rpx solid #a4a4a4;
}


.plan-bg {
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,.6);
    position: fixed;
    bottom: 100rpx;
    z-index:2;
}

.plan-content {
    width: 100%;
    background: white;
    position: fixed;
    bottom: 100rpx;
    padding-top: 20rpx;
}

.plan-line {
    padding: 20rpx;
}

.plan-scroll {
    display: flex;
    margin-top: 20rpx;
    height: 100rpx
}

.plan-item {
    background: #eee;
    margin-left: 20rpx;
    min-width:200rpx;
    height: 80rpx;
    min-height: 80rpx;
    white-space: nowrap;
    border-radius: 10rpx;
    box-sizing: border-box
}
.plan-item.selected {
    border:1px solid red;
}

.plan-title-txt {
    font-size: 30rpx;
    margin-left: 20rpx;
}

.recharge-item{
    width: 300rpx;
    display: flex;justify-content: center;align-items: center;
  }
  .recharge-item-btn{
    display: flex;
    align-items: center
  }
  .recharge-item-btn:active .recharge-item-btn-normal{
    display: none;
  }
  .recharge-item-btn:active .recharge-item-btn-active{
    display: inline-block;
  }
  .recharge-item-btn-normal{
    display: inline-block;
    width:60rpx;
    height:60rpx;
  
  }
  .recharge-item-btn-active{
    display: none;
    width:60rpx;
    height:60rpx;
  }
  
  .recharge-item-lable{
    display: inline-block;
    margin: 0 10rpx;
    background: #eee;
    flex: 1;
    text-align: center;
  }

