<view class='page'>
  <view class='body'>
      <view class="h15"></view>
      <view class='card m15'>
          <view class='body fxcb '>
            <view class='fxrb'><text class='f16 red bold'>{{coupon.voucherName}}</text></view>
            <view><lable class="text-ellipsis-line f12" >有效期：{{coupon.startTimeStr}}至{{coupon.validDataStr}}</lable></view>
            <image src='/assets/images/business/card_body.png' class='bg body_bg'></image>
          </view>
          <view class='info fxcm'>
            <text class='f16 mb10'>￥{{coupon.voucherValue}}</text>
            <!-- <text>即将过期</text> -->
            <image src='/assets/images/business/card_info_active.png' class='bg info_bg'></image>
          </view>
        </view>
    <view class='order  black f15'>优惠券编码：{{coupon.voucherNum}}</view>
    <view class='order f12'>
    <view class='mb10 f15  black'>使用规则：</view>
    <text class='rule-info'>{{coupon.useRule}}</text>
    </view>
  </view>
   <view class='footer'>
    <view class="bottom-btn" bindtap="delVoucher">解除绑定</view>
  </view> 
    

</view>
