<template name="topInfo">
    <view class="top-bg">
        <text class="top-phone">{{userNickname}}</text>
        <text class="top-balance">余额：{{userMoney}} | 积分：{{integral}}</text>
        <view class="top-tip">剧坊会员</view>
    </view>
</template>
<template name="orderMenu">
    <view class="menu-bg">
        <text class="menu-title-txt">我的订单</text>
        <view class="menu-row">
            <view class="menu-item" bindtap="orderManage" id="0">
                <image src="/images/menu-rob.png" class="menu-item-ico"></image>
                <text class="menu-item-txt">场次票</text>
            </view>
            <view class="menu-item" bindtap="orderManage" id="1">
                <image src="/images/menu-day.png" class="menu-item-ico"></image>
                <text class="menu-item-txt">套票</text>
            </view>
            <view class="menu-item" bindtap="orderManage" id="2">
                <image src="/images/menu-mall.png" class="menu-item-ico"></image>
                <text class="menu-item-txt">福州特产</text>
            </view>
            <view class="menu-item" bindtap="orderManage" id="3">
                <image src="/images/menu-mall.png" class="menu-item-ico"></image>
                <text class="menu-item-txt">通兑券</text>
            </view>
        </view>
    </view>
</template>
<template name="listInfo">
    <view class="list-bg">

            <view class='cell' bindtap='cardManage'>
            <image src="/images/menu-day.png" class="icon"></image>
            <text class="text">剧坊会员卡</text>
            </view>
            <view class='cell' bindtap='couponManage'>
            <image src="/images/menu-day.png" class="icon"></image>
            <text class="text">优惠券</text>
            </view>
            <view class='cell' bindtap='couponManage'>
            <image src="/images/menu-day.png" class="icon"></image>
            <text class="text">邀请好友</text>
            </view>
            <view class='cell' bindtap='makeCall'>
            <image src="/images/menu-day.png" class="icon"></image>
            <text class="text">联系客服</text>
            </view>
    </view>
</template>
<view>
    <template is="topInfo" data="{{...userInfo}}"></template>
    <template is="orderMenu"></template>
    <template is="listInfo"></template>
    <view class="logout" bindtap="loginOut">退出登陆</view>
</view>